generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PLANNED
  IN_PROGRESS
  DONE
}

enum Category {
  TODAY
  EVENING
  TOMORROW
  SOMEDAY
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  tasks    Task[]
}

model Task {
  id          String    @id @default(uuid())
  userId      String
  title       String
  description String?
  category    String
  status      String
  startTime   DateTime?
  endTime     DateTime?
  createAt    DateTime? @default(now())
  updateAt    DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
}
